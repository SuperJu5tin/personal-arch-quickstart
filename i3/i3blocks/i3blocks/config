# i3blocks configuration file
#
# The i3blocks man page describes the usage of the binary,
# and its website describes the configuration:
#
#     https://vivien.github.io/i3blocks


# Global properties
separator=false
separator_block_width=15


[power-profile]
command=~/.config/i3blocks/scripts/power-profile.sh
interval=once
signal=30

[spacer-left]
command=echo "   "
interval=once
separator=false
markup=none

[volume]
command=~/.config/i3blocks/scripts/vol.sh
interval=once
signal=10

[brightness]
command=~/.config/i3blocks/scripts/brightness.sh
interval=once
signal=20

[battery]
command=~/.config/i3blocks/scripts/battery.sh
interval=30

[spacer-right]
command=echo "   "
interval=once
separator=false
markup=none

[time]
command=date +'󰸗  %B %d %Y  󰥔  %I:%M:%S %p '
interval=1

